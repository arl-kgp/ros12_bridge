function(find_ros1_interface_packages var)
  set(ros1_message_packages "")
  {% for dep in rosdeps -%}
  list_append_unique(ros1_message_packages {{dep}})
  {% endfor %}
  set(${var} ${ros1_message_packages} PARENT_SCOPE)
endfunction()
